<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.101"
      fx:controller="org.jobsui.core.ui.javafx.ErrorController">
    <Label fx:id="message" style="-fx-font-weight: bold">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </Label>
    <TextArea fx:id="error" editable="false" wrapText="true" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </TextArea>
    <HBox alignment="CENTER" VBox.vgrow="NEVER">
        <Button onAction="#close" text="OK"/>
    </HBox>
</VBox>
